@model LAB.Models.Raw

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Raw</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @using (Html.BeginForm())
            {
                <fieldset>
                    <div class="form-group">
                        <label asp-for="NameOfRaw" class="control-label"></label>
                        @Html.EditorFor(model => model.NameOfRaw)
                    </div>
                    <div class="form-group">
                        <label asp-for="Measurement" class="control-label"></label>
                        @Html.DropDownListFor(model => model.MeasurementId, ViewBag.Meas as SelectList)
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </fieldset>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
